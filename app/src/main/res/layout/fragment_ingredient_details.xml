<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.IngredientDetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="@dimen/cocktail_details_margin_start"
                android:layout_marginEnd="@dimen/cocktail_details_margin_end"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/ingredient_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/favorite_not_selected"
                    android:gravity="center_vertical"
                    android:text="@string/ingredient_name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="25sp" />

                <ToggleButton
                    android:id="@+id/ingredient_in_bar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="0"
                    android:background="@drawable/checkbox_square"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ingredient_thumb"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:paddingStart="@dimen/cocktail_details_margin_start"
                android:paddingEnd="@dimen/cocktail_details_margin_end"
                android:contentDescription="@string/cocktail_view_description"
                android:src="@drawable/button_favorite" />

            <TextView
                android:id="@+id/ingredient_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="@dimen/cocktail_details_margin_start"
                android:layout_marginEnd="@dimen/cocktail_details_margin_end"
                android:clickable="true"
                android:focusable="true"
                android:ellipsize="end"
                android:foreground="?android:attr/selectableItemBackground"
                android:maxLines="@integer/recipeCollapsedMaxLines"
                android:text="@string/ingredient_description"
                android:textAlignment="viewStart"
                android:textSize="15sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cocktails_with_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>